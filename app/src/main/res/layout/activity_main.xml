<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.pop.paddlegame.MainActivity">


    <ImageView
        android:layout_width="606dp"
        android:layout_height="152dp"
        android:src="@drawable/game"
        tools:layout_editor_absoluteX="3dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-9dp" />

    <TextView
        android:id="@+id/instructions"
        android:layout_width="612dp"
        android:layout_height="87dp"
        android:layout_marginBottom="-50dp"
        android:fontFamily="casual"
        android:text="To move the paddle, touch appropriate side of the screen. Tap screen once to start game."
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toTopOf="@+id/buttonPlay"
        tools:layout_editor_absoluteX="3dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonPlay"
        android:background="@drawable/playbutton"
        android:layout_centerHorizontal="true"
        tools:ignore="ContentDescription"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.965"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />


</android.support.constraint.ConstraintLayout>
